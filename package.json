{
  "name": "client-server-template-with-vite",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build": "yarn build:client && yarn build:server",
    "build:client": "lerna run build --scope=client",
    "build:server": "lerna run build --scope=server",
    "dev": "yarn build && lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "yarn build && lerna run preview --parallel"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.9",
    "lerna": "^5.4.3"
  }
}

{
  "name": "client-server-template-with-vite",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build": "lerna run build",
    "dev:client": "lerna run dev  --scope=client",
    "dev:server": "lerna run dev --scope=server",
    "dev": "lerna run dev",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "lerna run preview",
    "pgadmin": "docker compose -f docker-compose.pgadmin.yml up",
    "pgadmin-detach": "docker compose -f docker-compose.pgadmin.yml up -d",
    "pgadmin-build": "docker compose -f docker-compose.pgadmin.yml build",
    "docker-stop-all": "docker stop $(docker ps -aq)",
    "docker-delete-images": "docker rmi $(docker images -q)"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=15"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.9",
    "lerna": "^5.4.3"
  }
}
